<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_content"
        android:textColor="@color/gray"
        android:textSize="18sp"
        android:lineSpacingExtra="@dimen/text_view_line_space"
        android:paddingLeft="@dimen/text_pager_padding"
        android:paddingRight="@dimen/text_pager_padding"
        android:paddingTop="@dimen/text_pager_padding_double"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/text_pager_padding_double"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>