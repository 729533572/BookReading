<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/white"
                android:padding="@dimen/item_padding"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view"
        android:scaleType="fitXY"
        android:layout_width="60dp"
        android:layout_height="80dp"/>
    <TextView
        android:id="@+id/tv_book_name"
        android:text="不休到过"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_update"
        android:text="更新"
        android:textSize="10sp"
        android:visibility="gone"
        android:textColor="@color/gray"
        android:background="@drawable/shape_update_text_bg"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_last_chapter"
        android:text="最新章节：第五百五十一章 丹道的不足"
        android:textSize="12sp"
        android:lines="1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/image_view"
        android:layout_below="@id/tv_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_last_time"
        android:textSize="12sp"
        android:text="最后更新：2017/2/5/ 12:45:12"
        android:layout_below="@id/tv_last_chapter"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_chapter"
        android:text="101/1012"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_last_chapter"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>